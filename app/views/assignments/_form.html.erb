<%= simple_form_for ([@taught_class, @assignment]) do |f| %>

  <div class="container" style="padding-left:10%; padding-right:10%;">
      <div class="d-flex" >

          <%= render partial: "left-card", locals: { f: f } %>

          <div style="overflow:hidden; width:5%"></div>

          <div class="d-flex flex-column" style="width:100%" data-controller="addquestion">
            <p class="mt-3" style="font-weight:bold;margin:0px;"> Assignment details </p>
            <%= render partial: "assignment_details_card", locals: { f: f } %>

            <%= f.abyme_for(:questions, partial: 'assignments/question_fields') do |abyme| %>

              <div class="d-flex justify-content-between">
                <p style="font-weight:bold;margin:0px;"> Questions </p>
                <!-- <button type="button" data-action="click->addquestion#show"> Add </button> -->
                <div data-action="click->addquestion#show">
                  <%= add_associated_record(content: 'Add', html: { class: 'secondary-button' } ) %>
                </div>


              </div>

              <%#= render partial: "questions_card", locals: { f: f } %>


              <!-- <div class="card mt-3 mb-3 border border-dark shadow-sm d-none" style ="width: 100%;border-radius: 20px;" data-addquestion-target="card"> -->
                <!-- <div class="card-body"> -->

                      <div>
                        <%#= f.abyme_for(:questions, partial: 'assignments/question_fields') do |abyme| %>
                        <div class="card mt-3 mb-3 border border-dark shadow-sm d-none" style ="width: 100%;border-radius: 20px;" data-addquestion-target="card">
                          <div class="card-body">
                            <%= abyme.records %>
                            <%= abyme.new_records %>
                          <%#= add_associated_record(content: 'Add', html: { class: 'secondary-button' }) %>
                          </div>
                        </div>

                      </div>


                  <br>

                <!-- </div> -->
              <!-- </div> -->

            <% end %>

      </div>
  </div>
</div>

<% end %>
